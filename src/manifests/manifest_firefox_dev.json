{
    "name": "Corona",
    "description": "Corona Wallet",
    "version": null,
    "manifest_version": 2,
    "applications": {
      "gecko": {
        "strict_min_version": "53.0"
      }
    },
    "permissions": [
      "storage",
      "unlimitedStorage",
      "videoCapture",
      "activeTab",
      "clipboardWrite",
      "notifications",
      "tabs"
    ],
    "icons": {
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    },
    "browser_action": {
      "default_title": "Corona",
      "default_popup": "popup/popup.html"
    },
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' 'strict-dynamic' blob: moz-extension: blob:moz-extension://59d3146e-7607-4906-92b6-b79271f4016b ; object-src 'self' 'strict-dynamic' blob: moz-extension: blob:moz-extension://59d3146e-7607-4906-92b6-b79271f4016b; worker-src blob: moz-extension: blob:moz-extension://59d3146e-7607-4906-92b6-b79271f4016b",
    "content_scripts": [{
      "run_at": "document_start",
      "all_frames":false,
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["inject.js"]
    }],
    "web_accessible_resources": [
      "inject.js",
      "phishing/phishing.html",
      "phishing/phishing.js",
      "popup/CameraRequestPermission.html"
    ],
    "options_ui": {
      "page": "options/options.html",
      "chrome_style": true
    }
  }
  